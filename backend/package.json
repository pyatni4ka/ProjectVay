{
  "name": "inventory-ai-backend",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "node --test --import tsx test/*.test.ts",
    "test:watch": "node --test --watch --import tsx test/*.test.ts",
    "test:coverage": "vitest run --coverage",
    "ingest:run": "node --import tsx src/ingestion/runIngestion.ts",
    "lint": "eslint src --ext .ts",
    "docker:build": "docker build -t inventory-ai-backend .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.5.0",
    "pino": "^9.6.0",
    "pino-pretty": "^12.0.0",
    "zod": "^3.24.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "typescript-eslint": "^8.20.0"
  }
}
