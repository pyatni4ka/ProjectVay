# Server
NODE_ENV=development
PORT=8080

# Recipe Cache
RECIPE_CACHE_TTL_SECONDS=604800
RECIPE_CACHE_DB_PATH=data/recipe-cache.sqlite
AI_STORE_DB_PATH=data/ai-store.sqlite

# Rate Limiting
RECIPE_FETCH_RATE_WINDOW_MS=60000
RECIPE_FETCH_RATE_MAX=30
BARCODE_LOOKUP_RATE_WINDOW_MS=60000
BARCODE_LOOKUP_RATE_MAX=120

# Barcode Lookup
# EAN_DB_API_KEY is optional. If not provided, EANDB provider will be skipped.
# Get a free key at https://ean-db.com if you want to use it.
EAN_DB_API_KEY=
EAN_DB_API_URL=https://ean-db.com/api
BARCODE_ENABLE_OPEN_FOOD_FACTS=true
BARCODE_ENABLE_BARCODE_LIST_RU=true
BARCODE_LOOKUP_TIMEOUT_MS=3000

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# External recipe providers
EXTERNAL_RECIPES_ENABLED=true
RECOMMEND_V2_ENABLED=true
EDAMAM_APP_ID=
EDAMAM_APP_KEY=
SPOONACULAR_API_KEY=
